<openerp>
    <data>
      <template id="maestrano.login_layout" inherit_id="web.login_layout" name="My Theme Login">
          <xpath expr="." position="inside">
              <script type="text/javascript">
                if (window.location.pathname === '/web/login') {
                  document.getElementsByClassName('oe_login_form')[0].style.display = 'none';
                  window.location.href="/maestrano/auth/saml/index"
                }
              </script>
          </xpath>
      </template>
    </data>
</openerp>